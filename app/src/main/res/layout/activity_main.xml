<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/main_btn1"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:text="关于Observable" />

    <Button
        android:id="@+id/main_btn2"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="基本使用" />

    <Button
        android:id="@+id/main_btn3"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="创建操作符" />

    <Button
        android:id="@+id/main_btn4"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="过滤操作符" />

    <Button
        android:id="@+id/main_btn5"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="条件和布尔操作符" />

    <Button
        android:id="@+id/main_btn6"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="算术和聚合操作符" />

    <Button
        android:id="@+id/main_btn7"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="转换操作符" />

    <Button
        android:id="@+id/main_btn8"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="组合操作符 " />

    <Button
        android:id="@+id/main_btn9"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="辅助操作符" />

    <Button
        android:id="@+id/main_btn10"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="错误处理" />

    <Button
        android:id="@+id/main_btn11"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="----" />

    <Button
        android:id="@+id/main_btn12"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="副作用" />

    <Button
        android:id="@+id/main_btn13"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="----" />
</LinearLayout>
