<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/test2_btn1"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:text="基本使用" />

    <Button
        android:id="@+id/test2_btn2"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="subscribeTest" />

    <Button
        android:id="@+id/test2_btn3"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="unSubscribetest2" />

    <Button
        android:id="@+id/test2_btn4"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="unSubscribeTest2" />
    <Button
        android:id="@+id/test2_btn5"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="onError 和 onCompleted" />
    <Button
        android:id="@+id/test2_btn6"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="释放资源" />


    </LinearLayout>
</ScrollView>
